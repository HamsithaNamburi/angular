
@{
    ViewData["Title"] = "login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>login</h1>
@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <td>UserName:</td>
            <td>@Html.TextBox("uname")</td>

        </tr>
        <tr>
            <td>Password:</td>
            <td>@Html.Password("pwd")</td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="login" class="btn btn-primary" /></td>
        </tr>
        <tr>
            <td>
                <span class="text-danger" >@Html.ViewBag.err</span>
            </td>
        </tr>
    </table>
}

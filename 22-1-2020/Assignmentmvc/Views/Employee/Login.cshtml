
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
@using (Html.BeginForm())
{
    <table>
        <thead>Login Page</thead>
        <tr>
            <td>Employee Id</td>
            <td>@Html.TextBox("Eid")  </td>
        </tr>
        <tr>
            <td>Password</td>
            <td>@Html.Password("pwd")</td>
        </tr>
        <tr>
            <td><input type="submit" value="login" /></td>
        </tr>
        <tr>
            <td><span>@Html.ViewBag.err</span></td>
        </tr>
        @*@Html.ActionLink("login", "signup new user");*@
    </table>
}
